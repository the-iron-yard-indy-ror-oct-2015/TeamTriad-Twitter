<% if current_user == @user %>
  <%= link_to "edit", edit_user_path(id:@user.id), class:"btn btn-warning" %>
<% elsif current_user_session && !current_user.following?(@user) %>
  <%= link_to "Follow this User", follow_path(id:@user.id), class:"btn btn-primary", remote:true%>
<% elsif current_user_session && current_user.following?(@user)%>
  <%= link_to "Unfollow this User", unfollow_path(id:@user.id), class:"btn btn-danger", remote:true%>
<% end %>
