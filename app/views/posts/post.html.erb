<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
    <% @post1 = Post.find(params[:id].to_i) %>
      <div class="n">
        <h2 class="post-title"></h2>
        <p class="post-subtitle" style="font-weight: normal;">
          <%=raw sanitize(simple_format(@post1.blurb), :tags => %w(br p) ) %>
        </p>
        <p class="post-meta">Posted on <%= @post1.created_at %></p>
        <%= link_to "HOME", root_path  %>
      </div>
    </div>
  </div>
</div>
